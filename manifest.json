{
  "manifest_version": 3,
  "name": "Smart Currency Converter",
  "version": "1.0",
  "description": "Convert any selected currency value to your preferred currency.",
  "permissions": ["contextMenus","storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://api.exchangerate-api.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon":{
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["tesseract.min.js","content.js"],
      "all_frames": true
    }
  ],
  "icons": {
  "16": "icons/icon16.png",
  "32": "icons/icon32.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
}

}
